{
    "name": "plugin-name",
    "version": "0.1.0",
    "private": "true",
    "devDependencies": {
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.11.0"
    },
    "dependencies": {
        "autoprefixer": "^9.4.6",
        "postcss-preset-env": "^6.5.0"
    },
    "scripts": {
        "dev-admin-scss": "parcel assets/src/scss/plugin-name-admin.scss --out-dir assets/dist --no-cache",
        "dev-public-scss": "parcel assets/src/scss/plugin-name-public.scss --out-dir assets/dist --no-cache",
        "dev-admin-js": "parcel assets/src/js/plugin-name-admin.js --out-dir assets/dist --no-cache",
        "dev-customizer-js": "parcel assets/src/js/plugin-name-customizer.js --out-dir assets/dist --no-cache",
        "dev-public-js": "parcel assets/src/js/plugin-name-public.js --out-dir assets/dist --no-cache",
		"dev-blocks": "parcel blocks/index.js --out-file blocks.js --out-dir assets/dist --no-cache",
        "build-admin-scss": "parcel build assets/src/scss/plugin-name-admin.scss --out-dir assets/dist --no-cache",
        "build-public-scss": "parcel build assets/src/scss/plugin-name-public.scss --out-dir assets/dist --no-cache",
        "build-admin-js": "parcel build assets/src/js/plugin-name-admin.js --out-dir assets/dist --no-cache",
        "build-customizer-js": "parcel build assets/src/js/plugin-name-customizer.js --out-dir assets/dist --no-cache",
        "build-public-js": "parcel build assets/src/js/plugin-name-public.js --out-dir assets/dist --no-cache",
		"build-blocks": "parcel build blocks/blocks.js --out-dir assets/dist --no-cache",
		"dev": "npm-run-all -p dev-*",
        "build": "npm-run-all -p build-*"
    }
}
